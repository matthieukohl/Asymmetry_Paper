% test the 2d box model vs the 2d sine model

r = linspace(0.01,1,100);
k = 1;

lambda_box = zeros(length(r),length(k));
lambda_sine = zeros(length(r),length(k));

for ii = 1:length(r)
    
lambda_box(ii) = toy_model_2d_non_sine_refined(r(ii),k);
lambda_sine(ii) = toy_model_2d_alternative(r(ii),k);

end

semilogx(r,lambda_box); hold on;
semilogx(r,lambda_sine);
xlabel('r')
ylabel('\lambda')
legend('box','sine'); legend boxoff;

